<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HamburgueriaZ" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.HamburgueriaZ" parent="Base.Theme.HamburgueriaZ" />

    <style name="TextViewLogo">
        <item name="android:layout_width">413dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">#6029C1</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">352dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="EstiloTexto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="EditTextInput">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:titleMarginBottom">18dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_buttom</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonMaisMenos" parent="Button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtomMenos" parent="ButtonMaisMenos">
        <item name="android:layout_marginEnd">216dp</item>
    </style>

    <style name="TextViewQntCompra">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="ButtomFazerPedido" parent="Button">
        <item name="android:layout_marginStart">8dp</item>
    </style>
</resources>